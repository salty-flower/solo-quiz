{
  "name": "solo-quiz",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:standalone": "cross-env BUILD_TARGET=inline vite build --config vite.config.ts",
    "build:cdn": "cross-env BUILD_TARGET=cdn vite build --config vite.config.ts",
    "build:schema": "tsx scripts/generate-schema.ts",
    "build": "pnpm run build:standalone && pnpm run build:cdn && pnpm run build:schema",
    "preview": "vite preview",
    "format": "biome format . --write",
    "lint": "biome lint . --write",
    "typecheck": "tsc --noEmit",
    "svelte-check": "svelte-check --tsconfig ./tsconfig.app.json",
    "check": "pnpm run lint && pnpm run typecheck && pnpm run svelte-check",
    "test:examples": "tsx scripts/test-examples.ts"
  },
  "dependencies": {
    "idb": "^8.0.1",
    "katex": "^0.16.25",
    "lucide-svelte": "^0.554.0",
    "markdown-it": "^14.1.0",
    "shadcn-svelte": "^1.0.9",
    "svelte": "^5.39.6",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@tailwindcss/forms": "^0.5.9",
    "@tsconfig/svelte": "^5.0.5",
    "@types/katex": "^0.16.7",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.6.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "postcss": "^8.4.49",
    "svelte-check": "^4.3.2",
    "tailwindcss": "^3.4.15",
    "tsx": "^4.19.2",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.1.14",
    "vite-plugin-singlefile": "^0.13.5",
    "zod-to-json-schema": "^3.23.5"
  },
  "pnpm": {
    "overrides": {
      "vite": "npm:rolldown-vite@7.1.14"
    }
  }
}
